# Include documentation and configuration files
include README.md
include LICENSE
include Makefile
include pyproject.toml

# Include all markdown documentation
recursive-include docs *.md
recursive-include mix *.md

# Include Python modules
recursive-include mix/target/distributed-llama.python *.py *.txt *.md
recursive-include mix/target/airllm *.py *.txt *.md

# Include C++ extension sources
recursive-include mix/target/airllm/cpp_ext *.cpp *.cu *.h *.py *.json

# Include example files
recursive-include mix/target/airllm/examples *.py

# Exclude compiled files and caches
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude *.pyd
global-exclude *.dll
global-exclude .gitignore
